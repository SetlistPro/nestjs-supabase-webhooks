{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es7"],
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./lib/**/*"]
}
